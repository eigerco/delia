{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 100,
        "indentWidth": 2
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": [
            "tsconfig*.json",
            "TimeBlockConverter.tsx"
        ]
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "trailingCommas": "all",
            "indentStyle": "space"
        }
    }
}
