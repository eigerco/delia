    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome",
    },
    "[json]": {
